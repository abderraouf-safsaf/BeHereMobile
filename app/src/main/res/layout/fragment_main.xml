<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="10"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageButton
            android:id="@+id/leftImageButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/right_arrow_button_height"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            android:background="@drawable/tw__transparent"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/left_arrow_icon" />

        <TextView
            android:id="@+id/moduleDesignationTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:alpha="0.8"
            android:gravity="center"
            android:text="TextView"
            android:textSize="@dimen/module_designation_text_size"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/rightImageButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/left_arrow_button_height"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            android:background="@drawable/tw__transparent"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/right_arrow_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/sectionsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/sections"
        android:textColor="@color/textSecondary" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sectionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:padding="5dp"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <TextView
        android:id="@+id/groupesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/groupes"
        android:textColor="@color/textSecondary" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/groupesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:padding="5dp"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>


