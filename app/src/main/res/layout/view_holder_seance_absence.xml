<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10">

    <TextView
        android:id="@+id/nomPrenomEtudiantTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="8"
        android:gravity="left|center"
        android:text="TextView"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/etudiantNomPrenomTextSize" />

    <ImageButton
        android:id="@+id/supprimerAbsenceImageButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/delete_button_height"
        android:layout_weight="2"
        android:background="@drawable/tw__transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/trash_icon" />

</LinearLayout>